@model FoodDelivery.Domain.Entities.Cart


<div class="navbar-right navbar-btn hiden-xs">
    @Html.ActionLink("Checkout", "Index", "Cart",
        new { returnUrl = Request.Url.PathAndQuery },
        new { @class = "btn link" }
        )
</div>

<div class="navbar-text navbar-right hiden-xs">
    <b class="hiden-xs">Your cart: </b>
    @Model.Lines.Sum(x => x.Quantity) item(s),
    @Model.ComputeTotalValue().ToString("c")
</div>