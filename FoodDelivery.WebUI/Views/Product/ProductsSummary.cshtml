@model FoodDelivery.Domain.Entities.Product

<div class="product-conteiner">
    @if (Model.ImageData != null)
    {
        <img class="img-thumbnail"
             src="@Url.Action("GetImage", "Product", new { Model.ProductID })" />
    }
    <h3>
        <strong class="product-name pull-left">@Model.Name</strong>
    </h3>
    <h3>
        <span class="pull-right product-price label label-primary">@Model.Price.ToString("c")</span>
    </h3>

    <span class="product-description lead pull-left">@Model.Description</span>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        <div class="pull-right">
            @Html.HiddenFor(x => x.ProductID)
            @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
            <input type="submit" class="btn btn-success" value="Add to cart" />
        </div>
    }
</div>