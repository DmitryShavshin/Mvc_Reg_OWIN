<style type="text/css">

    .fixed-overlay {
        position: fixed;
        overflow: auto;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0,0,0,0.5);
    }

    .modal-content {
        width: 600px;
        left: 30%;
        top: 30%;
    }
    .modal-footer {
        padding-top: 15px;
    }

    img {
        width: 128px;
        height: 128px;
        padding: 0;
        margin: 0;
    }
</style>

<div class="wrapper">
    <div class="container">
        <div class="fixed-overlay">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <img src="~/Content/Images/error.png" />
                </div>
                <div class="modal-body text-center">
                    <h1>Oops, something went wrong</h1>
                </div>
                <div class="modal-footer">
                    @using (Html.BeginForm("Index", "Master"))
                    {
                        <input type="submit" value="Reload Page" class="btn btn-success" />
                    }
                </div>
            </div>
        </div>
    </div>
</div>