@{
    ViewBag.Title = "ManageUserRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert-info col-sm-12 col-lg-12 col-md-12">
    @ViewBag.Message
</div>
<div class="wrapper">
    <div class="container">
        <div class="row col-sm-12 col-lg-12 col-md-12">
            @if (ViewBag.Users != null && ViewBag.Roles != null || ViewBag.Users != null || ViewBag.Roles != null)
            {
                <div class="row col-sm-12 col-lg-12 col-md-12">
                    <h1>Role Manager</h1>
                    <br />
                </div>
                <div class="col-sm-6 col-lg-6 col-md-6">
                    @Html.Partial("RolesListPartial")
                    @Html.Partial("UsersListPartial")
                    @Html.Partial("Create")
                </div>

                <div class="col-sm-6 col-lg-6 col-md-6">
                    @Html.Partial("RoleAddToUser")
                    @Html.Partial("GetRoles")
                    @Html.Partial("DeleteRoleForUser")
                </div>
            }
            else
            {
                @Html.Partial("Error")
            }
        </div>
    </div>   
</div>

